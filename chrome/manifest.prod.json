{
  "version": "0.0.0",
  "name": "Rai wallet",
  "manifest_version": 2,
  "description": "RaiBlocks wallet, send and receive XRB right in your browser.",
  "browser_action": {
    "default_title": "Rai wallet",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": ["inject.html"],
  "background": {
    "page": "background.html"
  },
  "permissions": ["contextMenus", "tabs", "storage", "https://github.com/*"],
  "content_security_policy":
    "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
